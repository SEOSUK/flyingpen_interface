<?xml version="1.0" ?>
<robot name="manipulator">
  <!-- Link Definitions -->
  <link name="world"/>

  <joint name="world_to_drone" type="fixed">
    <parent link="world"/>
    <child link="cf2_visual"/>
    <origin xyz="0 0 0" rpy="0 0 0"/> <!-- World 좌표계와 동일 -->
  </joint>
  
<link name="cf2_visual">
  <inertial>
    <origin xyz="0 0 0" rpy="0 0 0"/> <!-- Center of mass adjustment -->
    <mass value="1"/>
    <inertia ixx="0.032" ixy="0" ixz="0" iyy="0.032" iyz="0" izz="0.00012"/>
  </inertial>
  <visual>
    <origin xyz="0 0 0" rpy="0 0 0"/> <!-- Center of mass adjustment -->  
    <geometry>
        <mesh filename="package://flying_pen/models/meshes/crazyflie.dae" scale="0.001 0.001 0.001"/>
    </geometry>
  </visual>
</link>

<!-- 엔드이펙터 -->
  <link name="link_ee">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.1"/>
      <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
    </inertial>
    <visual>
      <geometry>
        <mesh filename="package://flying_pen/models/meshes/EE.dae" scale="0.001 0.001 0.001"/>
      </geometry>
    </visual>
  </link>

  <!-- 드론과 EE 연결 -->
  <joint name="drone_to_ee" type="fixed">
    <parent link="cf2_visual"/>
    <child link="link_ee"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

    
  <!-- 직육면체 링크 -->
  <link name="curvature">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://flying_pen/models/meshes/curvature.dae" scale="0.01 0.02 0.02"/>
      </geometry>
    </visual>
  </link>

  <!-- 월드에 고정: 초기 위치 (2, 2, 2) -->
  <joint name="world_to_curvature" type="fixed">
    <parent link="world"/>
    <child link="curvature"/>
    <origin xyz="0.5 3.8 0" rpy="0 0 0"/>
  </joint>
  
</robot>
